<Window x:Class="Autoprint.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Autoprint.Views"
        mc:Ignorable="d"
        Title="Print Setting"
        FontSize="20"
        d:DesignHeight="450"
        d:DesignWidth="800">
    <Border Padding="15">
        <Grid>
            <StackPanel VerticalAlignment="Top">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Label Content="Save as"
                           Grid.Column="0"
                           HorizontalAlignment="Left" />
                    <TextBox Grid.Column="1"
                             Grid.ColumnSpan="3" />
                    <Button Grid.Column="4"
                            Grid.Row="0"
                            Content="..."
                            Margin="15 0 15 0" />
                    <Label Content="Plot Style"
                           Grid.Column="0"
                           Grid.Row="1"
                           Margin="0 10 0 0"
                           HorizontalAlignment="Left" />
                    <ComboBox Grid.Row="1"
                              Grid.Column="1"
                              Grid.ColumnSpan="2"
                              Margin="0 10 0 0">

                    </ComboBox>

                    <RadioButton Grid.Row="2"
                                 Grid.Column="1"
                                 Content="Block"
                                 VerticalContentAlignment="Center"
                                 Margin="0 15 0 0 " />
                    <RadioButton Grid.Row="3"
                                 Grid.Column="1"
                                 Content="Polygon"
                                 VerticalContentAlignment="Center"
                                 Margin="0 15 0 0 " />
                    <RadioButton Grid.Row="4"
                                 Grid.Column="1"
                                 Content="Line"
                                 VerticalContentAlignment="Center"
                                 Margin="0 15 0 0 " />
                    <TextBlock Grid.Row="2"
                               Grid.Column="2"
                               Text="Block Name"
                               VerticalAlignment="Center"
                               Margin="0 15 0 0 " />
                    <TextBlock Grid.Row="3"
                               Grid.Column="2"
                               Text="Layer Name"
                               VerticalAlignment="Center"
                               Margin="0 15 0 0 " />
                    <TextBlock Grid.Row="4"
                               Grid.Column="2"
                               Text="Layer Name"
                               VerticalAlignment="Center"
                               Margin="0 15 0 0 " />
                    <TextBox Grid.Row="2"
                             Grid.Column="3"
                             Grid.ColumnSpan="2"
                             Margin="0 15 0 0 " />
                    <TextBox Grid.Row="3"
                             Grid.Column="3"
                             Grid.ColumnSpan="2"
                             Margin="0 15 0 0 " />
                    <TextBox Grid.Row="4"
                             Grid.Column="3"
                             Grid.ColumnSpan="2"
                             Margin="0 15 0 0 " />
                    <Label Content="Order By:"
                           Grid.Column="0"
                           Grid.Row="5"
                           Margin="0 10 0 0"
                           HorizontalAlignment="Left" />
                    <ComboBox Grid.Row="5"
                              Grid.Column="1"
                              Grid.ColumnSpan="2"
                              Margin="0 10 0 0" />
                    <Label Content="Printer Name:"
                           Grid.Column="0"
                           Grid.Row="7"
                           Margin="0 10 0 0"
                           HorizontalAlignment="Left" />
                    <ComboBox Grid.Row="7"
                              Grid.Column="1"
                              Grid.ColumnSpan="2"
                              Margin="0 10 0 0" />
                    <CheckBox Grid.Row="8"
                              Grid.Column="0"
                              Grid.ColumnSpan="2"
                              Content="Merge PDF files"
                              Margin="0 15 0 0"
                              VerticalContentAlignment="Center" />
                    <Button Grid.Row="9"
                            Grid.Column="3"
                            Content="OK"
                            Margin="5 0 5 0" />
                    <Button Grid.Row="9"
                            Grid.Column="4"
                            Content="Cancel"
                            Margin="5 0 5 0" />
                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</Window>